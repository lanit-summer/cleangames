<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katerina.mapsex.Team.TeamsActivity"
    android:id="@+id/teams">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/teamslayout"
        android:weightSum="1">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_popup"
            android:layout_gravity="left|center_horizontal"
            android:background="@drawable/menu_button"
            android:layout_weight="0.07" />


        <ListView
            android:layout_width="337dp"
            android:layout_height="278dp"
            android:id="@+id/listTeams"
            android:clickable="true"
            android:layout_weight="0.92" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="59dp"
            android:text="+"
            android:id="@+id/buttonCreateTeam"
            android:layout_gravity="left|bottom"
            android:clickable="true" />


    </LinearLayout>


    <TextView
        android:layout_width="209dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Подать заявку на создание новой команды"
        android:id="@+id/RequestCreateTeam"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
